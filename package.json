{
  "name": "smart-trash-routes",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema web para visualizar y gestionar rutas de camiones de basura en Buenaventura (Angular + NestJS).",
  "scripts": {
    "install:all": "npm-run-all install:front install:back",
    "install:front": "cd front-end && npm install",
    "install:back": "cd back-end && npm install",
    "dev": "npm-run-all --parallel dev:front dev:back",
    "dev:front": "cd front-end && npm start",
    "dev:back": "cd back-end && npm run start:dev",
    "build:all": "npm-run-all build:front build:back",
    "build:front": "cd front-end && ng build --configuration production --base-href /jose_site/ || echo '⚠️ Build frontend falló'",
    "build:back": "cd back-end && npm run build",
    "format": "npm-run-all format:back format:front",
    "format:back": "cd back-end && npm run format",
    "format:front": "cd front-end && npm run format"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18"
  },
  "author": "Equipo Smart Trash Routes - Universidad del Valle",
  "license": "MIT"
}